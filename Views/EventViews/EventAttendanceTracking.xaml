                     BorderThickness="2"
                     Height="32"
                     MaxLength="50"
                     Width="110"
                     RelativePanel.Below="firstNameTextBlock"
                     Style ="{StaticResource StandardTextBox}"
                     Text="{x:Bind tracker.FirstName, Mode=TwoWay}" 
                     AcceptsReturn="True"  
                     InputScope="Chat"/>
            </RelativePanel>

            <RelativePanel Name="rpLastName"
                           Grid.Row="3"
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           Padding="20,15,20,15"                                    
