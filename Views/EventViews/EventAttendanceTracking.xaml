                                 Background="White"
                                 BorderBrush="#1b3e6e"
                                 BorderThickness="2"
                                 Height="32"
                                 MaxLength="100"
                                 Margin="60,0,0,0"
                                 HorizontalAlignment="Left" 
                                 VerticalAlignment="Center"
                                 Width="180"
                                 Visibility="Collapsed"/>
                <CheckBox Name="ckbAnswerOne"
                                  Content="Check if Yes"  
                                  IsTabStop="False"
                                  Margin="60,0,0,0"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center"/>
                <DatePicker x:Name="dprAnswerOne"
