<Page
    x:Class="CAA_Event_Management.Views.EventViews.EventAttendanceTracking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CAA_Event_Management"
    xmlns:data="using:CAA_Event_Management.Models"
    xmlns:Converters="using:CAA_Event_Management.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windowsStateTriggers="using:WindowsStateTriggers"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundColor}"
    FontFamily="{ThemeResource ContentControlThemeFontFamily}">

    <!--**************************
        Design work: Nathan Smith 60%
        Extra work by: Jon Yade 40%
    ************************-->

    <Page.Resources>
        <Converters:DateTimeToOffsetConverter x:Key="DateTimeToOffsetConverter"/>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#f5f5f5</SolidColorBrush>
        <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#1b3e6e"/>
        <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="White"/>
        <SolidColorBrush x:Key="DatePickerButtonBackground" Color="White"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="vsPortrait">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="vsLandscape">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="769"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--rpFirstName Changes-->
                        <Setter Target ="rpFirstName.HorizontalAlignment" Value="Right"/>
                        <Setter Target="rpFirstName.Padding" Value="20,0,20,0"/>
                        <!--rpLastName Changes-->
                        <Setter Target="rpLastName.(Grid.Column)" Value="1"/>
                        <Setter Target="rpLastName.(Grid.Row)" Value="2"/>
                        <Setter Target="rpLastName.HorizontalAlignment" Value="Right"/>
                        <Setter Target="rpLastName.Margin" Value="-10,30,0,0"/>
                        <Setter Target="rpLastName.Padding" Value="20,0,20,0"/>
                        <!--rpPhone Changes-->
                        <Setter Target="rpPhone.Padding" Value="20,10,20,29"/>
                        <Setter Target="rpPhone.(Grid.Row)" Value="3"/>
                        <Setter Target="rpPhone.HorizontalAlignment" Value="Right"/>
                        <!--rpMemberCheck Changes-->
                        <Setter Target="rpMemberCheck.(Grid.Column)" Value="1"/>
                        <Setter Target="rpMemberCheck.(Grid.Row)" Value="3"/>
                        <Setter Target="rpMemberCheck.Margin" Value="0,0,0,0"/>
                        <Setter Target="rpMemberCheck.Padding" Value="-10,10,20,5"/>
                        <Setter Target="rpMemberCheck.HorizontalAlignment" Value="Left"/>
                        <!--Other Changes-->
                        <Setter Target="tbkLastSwipe.Margin" Value="30,30,0,0"/>
                        <Setter Target="btnSubmit.Margin" Value="100,20,0,0"/>
                        <Setter Target="svSurvey.Height" Value="180"/>
                        <!--Border Settings-->
                        <Setter Target="rpFirstName.BorderThickness" Value="3,3,0,0"/>
                        <Setter Target="rpLastName.BorderThickness" Value="0,3,3,0"/>
                        <Setter Target="rpPhone.BorderThickness" Value="3,0,0,3"/>
                        <Setter Target="rpMemberCheck.BorderThickness" Value="0,0,3,3"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" Background="#1b3e6e">
            <Button Name="btnBack"
                    Background="Transparent"
                    Content="Back To Events"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#eaeaea"                    
                    Margin="30,40,10,0"
                    IsTabStop="False"
                    Click="btnBack_Click">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#74c4ea"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </RelativePanel>

        <Grid x:Name="LayoutRoot"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <RelativePanel Grid.Row="1"  
                       Grid.ColumnSpan="3"
                       BorderBrush="#1b3e6e" 
                       BorderThickness="3"
                       HorizontalAlignment="Left"
                       Margin="5,20,0,0"
                       Padding="10"
                       VerticalAlignment="Center">
                <TextBlock Name="memberNumTextBlock"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" 
                       Margin="0,0,10,0"
                       Padding="5"
                       VerticalAlignment="Center"
                       Text="CAA Number:" />
                <TextBox Name="memberNumTextBox" 
                     BorderBrush="#1b3e6e"
                     InputScope="Number"
                     Margin="0,0,10,0"
                     MaxLength="170" 
                     MinWidth="200"
                     Style="{StaticResource StandardTextBox}"
                     Text="{x:Bind tracker.MemberNo, Mode=TwoWay}" 
                     AcceptsReturn="False"
                     RelativePanel.RightOf="memberNumTextBlock"/>
                <TextBlock x:Name="numberError"
                       FontFamily="Segoe MDL2 Assets" 
                       FontSize="30" 
                       Text="&#xEF2C;"
                       RelativePanel.RightOf="memberNumTextBox"
                       Foreground="Red"
                       Margin="10,0,0,0"
                       Visibility="Collapsed"/>
            </RelativePanel>

            <RelativePanel Name="rpFirstName" 
                       Grid.Row="2"
                       Padding="20,10,20,0" 
                       BorderBrush="#1b3e6e" 
                       BorderThickness="3,3,3,0"
                       HorizontalAlignment="Center"
                       Margin="10,30,0,0"
                       VerticalAlignment="Top">
                <TextBlock Name="firstNameTextBlock" 
                       HorizontalAlignment="Left"  
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,10,0"
                       Padding="5"
                       VerticalAlignment="Top"  
                       Text="First Name:" />
                <TextBox Name="firstNameTextBox"
                     BorderBrush="#1b3e6e"
                     BorderThickness="2"
                     Height="32"
                     MaxLength="50"
                     Margin="0,0,0,0"
                     Width="110"
                     RelativePanel.Below="firstNameTextBlock"
                     Style ="{StaticResource StandardTextBox}"
                     Text="{x:Bind tracker.FirstName, Mode=TwoWay}" 
                     AcceptsReturn="True"  
                     InputScope="Chat"/>
            </RelativePanel>

            <RelativePanel Name="rpLastName"
                           Grid.Row="3"
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           Padding="20,5,20,0"                                    
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,0"
                           VerticalAlignment="Top">
                <TextBlock Name="lastNameBlock" 
                           HorizontalAlignment="Left" 
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,10,0"
                           Padding="5"
                           VerticalAlignment="Center" 
                           Text="Last Name:" />
                <TextBox Name="lastNameTextBox" 
                         BorderBrush="#1b3e6e"
                         BorderThickness="2"
                         Grid.Row="2" 
                         Grid.Column="1" 
                         Height="32"
                         InputScope="Chat"
                         MaxLength="50"  
                         Width="110"
                         RelativePanel.Below="lastNameBlock"
                         Style="{StaticResource StandardTextBox}"
                         Text="{x:Bind tracker.LastName, Mode=TwoWay}" 
                         AcceptsReturn="False"/>
            </RelativePanel>

            <RelativePanel Name="rpPhone"
                           Grid.Row="4" 
                           Padding="20,5,20,0" 
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,0" 
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top">
                <TextBlock Margin="0,0,10,0"
                           FontSize="16"
                           FontWeight="Bold"
                           Padding="5"
                           VerticalAlignment="Center" 
                           Name="phoneNumBlock" 
                           Text="Phone:" />
                <TextBox BorderBrush="#1b3e6e"
                         BorderThickness="2"
                         Height="32"
                         InputScope="Number"
                         Name="phoneNumTextBox" 
                         MaxLength="50" 
                         Width="110"
                         RelativePanel.Below="phoneNumBlock"
                         Style="{StaticResource StandardTextBox}"
                         Text="{x:Bind  tracker.PhoneNo, Mode=TwoWay}" 
                         AcceptsReturn="False" />
            </RelativePanel>

            <RelativePanel Name="rpMemberCheck"
                           Grid.Row="5" 
                           HorizontalAlignment="Center" 
                           Margin="10,0,0,10"
                           Padding="10"
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,3"
                           VerticalAlignment="Top">
                <TextBlock Text="CAA Member?     "
                           FontSize="16"            
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center" 
                           Name="isMembersBlock" />
                <CheckBox x:Name="isMembersCheck" 
                          Content="Yes"
                          FontSize="16"
                          IsTabStop="False"
                          Margin="10,0,0,0"
                          RelativePanel.Below="isMembersBlock"/>
                <TextBlock Name="tbMemberCheck"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="10,0,0,0"
                           RelativePanel.Below="isMembersCheck"
                           Text="(Check if card not available)"
                           TextWrapping="WrapWholeWords"
                           Width="120"/>
            </RelativePanel>

            <TextBlock x:Name="tbkLastSwipe"
                       FontSize="15"
                       FontWeight="Bold"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       Margin="30,10,0,0"
                       Text="Last Entry:"
                       Grid.Row="6"
                       TextWrapping="WrapWholeWords"/>

        </Grid>

