                                   FontSize="16"
                                   FontWeight="Bold"
                                   MaxWidth="275"
                                   Margin="60,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   TextWrapping="WrapWholeWords"
                                   Visibility="Collapsed"/>
