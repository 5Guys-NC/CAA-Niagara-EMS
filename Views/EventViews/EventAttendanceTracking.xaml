                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20"
                    Style="{StaticResource actionButtonStyle}"
                    Visibility="Visible"
                    IsTabStop="False"
                    VerticalAlignment="Top"
                    Click="btnSubmit_Click"/>
