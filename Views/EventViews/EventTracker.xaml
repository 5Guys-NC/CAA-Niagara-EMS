<Page
    x:Class="CAA_Event_Management.Views.EventViews.EventAttendanceTracking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CAA_Event_Management"
    xmlns:data="using:CAA_Event_Management.Models"
    xmlns:Converters="using:CAA_Event_Management.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundColor}"
    FontFamily="{ThemeResource ContentControlThemeFontFamily}">

    <!--**************************
        Design work: Nathan Smith 60%
        Extra work by: Jon Yade 40%
    ************************-->

    <Page.Resources>
        <Converters:DateTimeToOffsetConverter x:Key="DateTimeToOffsetConverter"/>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#f5f5f5</SolidColorBrush>
        <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#1b3e6e"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="vsPortrait">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="vsLandscape">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="961" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" Background="#1b3e6e">
            <!--<TextBlock Name="txtCAAEventDetails"
                       Margin="130,0,0,0"
                       Text="CAA Events"
                       Foreground="#eaeaea"
                       FontWeight="Bold"
                       FontSize="30"/>-->
            <Button Name="btnBack"
                    Background="Transparent"
                    Content="Back To Events"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#eaeaea"                    
                    Margin="30,40,10,0"
                    IsTabStop="False"
                    Click="btnBack_Click">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#74c4ea"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Transparent"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </RelativePanel>

        <Grid x:Name="LayoutRoot"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <RelativePanel Grid.Row="1"  
                       Grid.ColumnSpan="2"
                       BorderBrush="#1b3e6e" 
                       BorderThickness="3"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       Padding="20"
                       VerticalAlignment="Center">
                <TextBlock Name="memberNumTextBlock"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" 
                       Margin="0,0,10,0"
                       Padding="5"
                       VerticalAlignment="Center"
                       Text="Member Number:" />
                <TextBox Name="memberNumTextBox" 
                     BorderBrush="#1b3e6e"
                     InputScope="Number"
                     Margin="0,0,10,0"
                     MaxLength="170" 
                     MinWidth="200"
                     Style="{StaticResource StandardTextBox}"
                     Text="{x:Bind tracker.MemberNo, Mode=TwoWay}" 
                     AcceptsReturn="False"
                     RelativePanel.RightOf="memberNumTextBlock"/>
                <!--TextChanged="cardEntryTextBox_TextChanged"/>-->
                <TextBlock x:Name="numberError"
                       FontFamily="Segoe MDL2 Assets" 
                       FontSize="30" 
                       Text="&#xEF2C;"
                       RelativePanel.RightOf="memberNumTextBox"
                       Foreground="Red"
                       Margin="10,0,0,0"
                       Visibility="Collapsed"/>
            </RelativePanel>

            <RelativePanel Grid.Row="2"
                       Padding="20,15,20,15" 
                       BorderBrush="#1b3e6e" 
                       BorderThickness="3,3,3,0"
                       HorizontalAlignment="Center"
                       Margin="10,50,0,0"
                       VerticalAlignment="Bottom">
                <TextBlock Name="firstNameTextBlock" 
                       HorizontalAlignment="Left"  
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,10,0"
                       Padding="5"
                       VerticalAlignment="Top"  
                       Text="First Name:" />
                <TextBox Name="firstNameTextBox"
                     BorderBrush="#1b3e6e"
                     BorderThickness="2"
                     Height="32"
                     MaxLength="50"
                     Width="150"
                     RelativePanel.Below="firstNameTextBlock"
                     Style ="{StaticResource StandardTextBox}"
                     Text="{x:Bind tracker.FirstName, Mode=TwoWay}" 
                     AcceptsReturn="True"  
                     InputScope="Chat"/>
            </RelativePanel>

            <RelativePanel Grid.Row="3"
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           Padding="20,15,20,15"                                    
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,0"
                           VerticalAlignment="Top">
                <TextBlock Name="lastNameBlock" 
                           HorizontalAlignment="Left" 
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,10,0"
                           Padding="5"
                           VerticalAlignment="Center" 
                           Text="Last Name:" />
                <TextBox Name="lastNameTextBox" 
                         BorderBrush="#1b3e6e"
                         BorderThickness="2"
                         Grid.Row="2" 
                         Grid.Column="1" 
                         Height="32"
                         InputScope="Chat"
                         MaxLength="50"  
                         Width="150"
                         RelativePanel.Below="lastNameBlock"
                         Style="{StaticResource StandardTextBox}"
                         Text="{x:Bind tracker.LastName, Mode=TwoWay}" 
                         AcceptsReturn="False"/>
            </RelativePanel>

            <RelativePanel Grid.Row="4" 
                           Padding="20,15,20,15" 
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,0" 
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top">
                <TextBlock Margin="0,0,10,0"
                           FontSize="16"
                           FontWeight="Bold"
                           Padding="5"
                           VerticalAlignment="Center" 
                           Name="phoneNumBlock" 
                           Text="Phone number:" />
                <TextBox BorderBrush="#1b3e6e"
                         BorderThickness="2"
                         Height="32"
                         InputScope="Number"
                         Name="phoneNumTextBox" 
                         MaxLength="50" 
                         Width="150"
                         RelativePanel.Below="phoneNumBlock"
                         Style="{StaticResource StandardTextBox}"
                         Text="{x:Bind  tracker.PhoneNo, Mode=TwoWay}" 
                         AcceptsReturn="False" />
            </RelativePanel>

            <RelativePanel Grid.Row="5" 
                           HorizontalAlignment="Center" 
                           Margin="10,0,0,0"
                           Padding="30,10,30,10"
                           BorderBrush="#1b3e6e" 
                           BorderThickness="3,0,3,3"
                           VerticalAlignment="Top">
                <TextBlock Text="Is a Member:     "
                           FontSize="16"            
                           FontWeight="Bold"
                           Margin="3,0,0,0"
                           VerticalAlignment="Center" 
                           Name="isMembersBlock" />
                <CheckBox x:Name="isMembersCheck" 
                          Content="Yes"
                          FontSize="16"
                          IsTabStop="False"
                          Margin="10,0,0,0"
                          RelativePanel.Below="isMembersBlock"/>
                <TextBlock Name="tbMemberCheck"
                           FontSize="14"
                           FontWeight="Bold"
                           RelativePanel.Below="isMembersCheck"
                           Text="(Check if card not available"
                           TextWrapping="WrapWholeWords"
                           Width="120"/>
            </RelativePanel>
        </Grid>
        
