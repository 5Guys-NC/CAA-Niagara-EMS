                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <RelativePanel Grid.Row="1"  
                       Grid.ColumnSpan="3"
                       BorderBrush="#1b3e6e" 
                       BorderThickness="3"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       Padding="20"
                       VerticalAlignment="Center">
